{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "../dist/backend",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "src",
    "../shared"
  ],
  "exclude": [
    "node_modules"
  ]
}
